{
    "manifest_version": 2,
    "name": "Browse Later",
    "version": "3.0.2",
    "description": "Stash tabs and browse later.",
    "homepage_url": "https://github.com/hoyang/browse-later",
    "icons": {
        "48": "icons/icon.png",
        "96": "icons/icon.png"
    },

    "permissions": [
        "tabs",
        "storage",
        "clipboardWrite",
        "contextMenus"
    ],

    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_title": "Browse now",
        "browser_style": true
    },

    "background": {
        "scripts": ["common.js", "background.js"]
    }
}
